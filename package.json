{
	"name": "modustoolbox",
	"displayName": "ModusToolbox",
	"description": "Design/Debug/Configure Infineon MCUs",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:modustoolbox.helloWorld",
		"workspaceContains:./.mtbLaunchConfigs",
		"onView:mtbToolsx"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "mtbTools",
					"name": "MTB Tools",
					"visibility": "hidden"
				}
			]
		},
		"commands": [
			{
				"command": "mtbTools.openTool",
				"title": "Open"
			},
			{
				"command": "mtbTools.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "mtbTools.refresh",
					"when": "view == mtbTools",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "mtbTools.openTool",
					"when": "view == mtbTools && viewItem == tool",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.56.0",
		"@types/xml2js": "^0.4.8",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
